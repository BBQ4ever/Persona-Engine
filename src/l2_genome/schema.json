{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Persona Genome L2 Schema",
  "description": "Definition for structural persona genetic traits (Loci)",
  "type": "object",
  "properties": {
    "version": {
      "type": "string",
      "description": "The version of this genome definition"
    },
    "metadata": {
      "type": "object",
      "properties": {
        "persona_id": { "type": "string" },
        "author": { "type": "string" },
        "created_at": { "type": "string", "format": "date-time" }
      },
      "required": ["persona_id"]
    },
    "loci": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/trait_locus"
      }
    }
  },
  "required": ["version", "loci"],
  "definitions": {
    "trait_locus": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[a-z0-9_]+$"
        },
        "category": {
          "type": "string",
          "enum": ["cognitive", "value", "style", "domain"]
        },
        "description": {
          "type": "string"
        },
        "distribution": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": ["scalar", "range", "categorical", "dirichlet"]
            },
            "values": {
              "type": "object",
              "description": "Parameters for the distribution (e.g., mean, std, or probability map)"
            }
          },
          "required": ["type", "values"]
        },
        "weight": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "default": 0.5
        },
        "variability": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "description": "How easily this trait drifts over time (0 = locked, 1 = highly fluid)"
        }
      },
      "required": ["id", "category", "distribution"]
    }
  }
}
